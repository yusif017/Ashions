    <script>
        function AddToCart(id) {
            let cart = {
                id: id,
                quantity: 1
            };

            $.ajax({
                type: 'POST',
                url: `/Cart/AddToCart?id=${cart.id}&quantity=${cart.quantity}`,
                contentType: 'application/json',
                success: function (e) {
                    Swal.fire({
                        position: 'center',
                        icon: 'success',
                        title: 'Sebete elave olundu',
                        showConfirmButton: false,
                        timer: 1500
                    })
                },
                error: function (e) {
                    alert("Error");
                }
            })
        }

    </script>
 
