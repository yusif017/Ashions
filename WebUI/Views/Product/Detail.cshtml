@model DetailVM
    <!-- Breadcrumb Begin -->
    <div class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__links">
                        <a href="./index.html"><i class="fa fa-home"></i> Home</a>
                        <a href="#">Women’s </a>
                        <span>Essential structured blazer</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->

    <!-- Product Details Section Begin -->
    <section class="product-details spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="product__details__pic">
                        <div class="product__details__pic__left product__thumb nice-scroll">
                        @{
                            int counte = 1;
                            int con = 1;
                        }
                        @foreach (var item in Model.productDetailDTOs.PhotoUrls)
                        {
                            con++;
                            <a class="pt @(counte == 1 ? "active" : "")" href="#product-@con">
                                <img src="@item" alt="@item">
                            </a>
                            counte++;
                        }
                        </div>
                        <div class="product__details__slider__content">
                            <div class="product__details__pic__slider owl-carousel">
                                   @{
                         
                            int cont = 1;
                        }
                        @foreach (var item in Model.productDetailDTOs.PhotoUrls)
                            {
                                cont++;
                                <img data-hash="product-@con" class="product__big__img" src="@item" alt="">
                        }
                        </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="product__details__text">
                        <h3>@Model.productDetailDTOs.ProductTitle <span>Brand: @Model.productDetailDTOs.ProductSubTitle</span></h3>
                        <div class="rating">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <span>( 138 reviews )</span>
                        </div>
                        <div class="product__details__price">$ @Model.productDetailDTOs.Price <span>$ @Model.productDetailDTOs.Discount</span></div>
                        <p>@Model.productDetailDTOs.Description</p>
                        <div class="product__details__button">
                 
                        <button style="border:none;" onclick="AddToCart(@Model.productDetailDTOs.Id)" class="cart-btn"><span class="icon_bag_alt"></span> Add to cart</button>
                            <ul>
                                <li><a href="#"><span class="icon_heart_alt"></span></a></li>
                                <li><a href="#"><span class="icon_adjust-horiz"></span></a></li>
                            </ul>
                        </div>
                    <span>Available color</span>
                    <div class="product__details__widget p-2">
                       
                        <ul>
                           
                            <li class="ml-3">
                            
                                <div class="color__checkbox">
                                 @foreach (var item in Model.productDetailOxsarDTOs.Take(6))
                                    {
                                        if (item.Id != Model.productDetailDTOs.Id)
                                        {

                                            <a href="/product/Detail/@item.Id/@item.SeoUrl"><img style="width:80px;border-radius:10px;" src="@item.PhotoUrl" /></a>
            }}
                                </div>
                            </li>
                           
                        </ul>
                    </div>
                        <div class="product__details__widget">
                            <ul>
                              
                                <li>
                                    <span>Available size:</span>
                                    <div class="size__btn">
                                        <label for="xs-btn" class="active">
                                            <input type="radio" id="xs-btn">
                                            @Model.productDetailDTOs.PraductSize
                                        </label>
                                       
                                    </div>
                                </li>
                                <li>
                                    <span>Promotions:</span>
                                    <p>@Model.productDetailDTOs.ProductKargo</p>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-lg-12 text-center">
                    <div class="related__title">
                        <h5>RELATED PRODUCTS</h5>
                    </div>
                </div>
          
                @foreach (var item in Model.productDetailCategoryDTOs.Take(4))
                {
                if (item.Id != Model.productDetailDTOs.Id)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="product__item">
                            <div class="product__item__pic set-bg" data-setbg="@item.PhotoUrl">
                                <div class="label new">New</div>
                                <ul class="product__hover">
                                    <li><a href="/product/Detail/@item.Id"><span class="arrow_expand"></span></a></li>
                                    <li><a href="#"><span class="icon_heart_alt"></span></a></li>
                                    <li><a onclick="AddToCart(@item.Id)"><span class="icon_bag_alt"></span></a></li>
                                </ul>
                            </div>
                            <div class="product__item__text">
                                <h6><a href="#">Buttons tweed blazer</a></h6>
                                <div class="rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </div>
                                <div class="product__price">$@item.Price</div>
                            </div>
                        </div>
                    </div>
                
            }
           
       
 }
               
            </div>
        
    </section>
    <!-- Product Details Section End -->

@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

}
