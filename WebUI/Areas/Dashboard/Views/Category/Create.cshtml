@using Entities.DTOs.CategoryDTOs;
@model CategoryAddDTO


<div class="card w-100">

    <div class="card-body">


        <form method="post" enctype="multipart/form-data">
            <div class="col-lg-4 col-md-12">
                <div class="w-100">

                    <div class="form-group">

                        <label class="custom-file-upload " style="display: inline-block;padding: 4px 20px;cursor: pointer;background: rgb(202, 197, 197); color:black">
                            Dosya Seçin<input type="file" asp-for="PhotoUrl" id="fileInput" accept="image/*" name="Photo" style="display:none">
                        </label>
                        <span asp-validation-for="PhotoUrl" class="text-danger"></span>

                    </div>
                    <div class="form-group ml-5">

                        <img id="uploadedImage" style="max-width: 100%; max-height: 300px;">


                    </div>
                </div>


            </div>
    <div class="form-group">
                <input type="text" name="CategoryName" class="form-control" asp-for="CategoryName" placeholder="Name Aze" />
                <span class="text-danger" asp-validation-for="CategoryName"></span>

    </div>
    <div class="form-group">
                <input type="text" name="CategoryName" class="form-control" asp-for="CategoryName" placeholder="Name Eng" />
                <span class="text-danger" asp-validation-for="CategoryName"></span>
            </div>   
    <div class="form-group">
                <input type="text" name="CategoryName" class="form-control" asp-for="CategoryName" placeholder="Name Ru" />
                <span class="text-danger" asp-validation-for="CategoryName"></span>

    </div>
 

   <input type="submit" value="Create" class="btn btn-info"  />
</form>
</div>
</div>


@section Scripts{


    <script>
        const fileInput = document.getElementById('fileInput');
        const uploadedImage = document.getElementById('uploadedImage');

        fileInput.addEventListener('change', function (event) {
            const selectedFile = event.target.files[0];
            if (selectedFile) {
                uploadedImage.src = URL.createObjectURL(selectedFile);
            }
        });
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.1/js/bootstrap.min.js" integrity="sha512-fHY2UiQlipUq0dEabSM4s+phmn+bcxSYzXP4vAXItBvBHU7zAM/mkhCZjtBEIJexhOMzZbgFlPLuErlJF2b+0g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}
