@using Entities.DTOs.ColorDTOs;
@model List<ColorAdminListDTO>
@section Link{
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.23/dist/sweetalert2.min.css" />
    <link href="~/Admin/vendor/datatables/css/jquery.dataTables.min.css" rel="stylesheet">
}

<div class="card w-100">
    <a class="btn btn-info" href="/Dashboard/Color/create">Create</a>
    <div class="card-body">
        <table class="table table-bordered " id="example" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Color Name</th>
                 
                    <th scope="col">#</th>

                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                           
                            <td>@item.ColorName</td>
                
                            <td class="d-flex align-items-center">
                                <form method="post" asp-action="Delete" asp-route-id="@item.Id" class="mr-1">
                                    <button type="submit" onclick="return confirm('Are you sure you want to delete: @item.ColorName')" class="btn btn-danger">Delete</button>
                                </form>
                                <a href="/Admin/Color/Edit/@item.Id" class="btn btn-info">Update</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">Category is empty</div>
                }
            </tbody>
        </table>
    </div>
</div>



                                    @section Scripts{


    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/Admin/vendor/datatables/js/jquery.dataTables.min.js"></script>

    <script>
        (function ($) {
            "use strict"

            $('.example-style').DataTable();
          
            var table = $('#example').DataTable({
                createdRow: function (row, data, index) {
                    $(row).addClass('selected')
                }
            });

        })(jQuery);
    </script>



    }