@using Entities.DTOs.ProductDTOs;
@model List<ProductAdminListDTO>

<div class="card w-100">
    <a class="btn btn-info" href="/Dashboard/Product/create">Create</a>
    <div class="card-body">
<table class="table  table-hover table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Product Name</th>
            <th scope="col">Photo</th>
            <th scope="col">Price</th>
            <th scope="col">Discount</th>
            <th scope="col">Quantity</th>
            <th scope="col">Size</th>
            <th scope="col">Kargo</th>
            <th scope="col">Color</th>
            <th scope="col">Kargo Prise</th>
         
            <th scope="col">Category</th>
          
                    <td>#</td>
                    <td>#</td>


        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>#</td>
                    <td>@item.ProductName</td>
                    <td><img width="150" src="@item.PhotoUrl" alt="" /> </td>
                    <td>@item.Price</td>
                    <td>@item.Discount</td>
                    <td>@item.Quantity</td>
                    <td>@item.PraductSize</td>
                    <td>@item.ProductKargo</td>
                    <td>@item.ColorName</td>
                    <td>@item.KargoPrice</td>
                    <td>@item.CategoryName</td>
                
       



                            <td>
                              <form method="post" asp-action="Delete" asp-route-id="@item.Id"><button type="submit" onclick="return confirm('Are you sure you want to delete: @item.ProductName')" class="btn btn-danger">Delete</button></form>
                              </td>

                            <td><a href="/Admin/Product/edit/@item.Id" class="btn btn-info">Edit</a></td>


                </tr>
            }
        }else{
            <div class="alert alert-warning">Product is empty</div>
        }
    </tbody>
</table>

                    </div>
                    </div>